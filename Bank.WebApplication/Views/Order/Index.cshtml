@model Bank.WebApplication.ViewModels.IndexOrderVM

@{
    ViewBag.Title = "Index";
}

<h2>Ordenes de Pago - Banco @Model.BankName</h2>

<p>
    @Html.ActionLink("Crear", "Create")
</p>
<table class="table">
    <tr>
        <th>
            #
        </th>
        <th>
            Monto
        </th>
        <th>
            Moneda
        </th>
        <th>
            Estado
        </th>
        <th>
            Fecha de Pago
        </th>
        <th>
            Sucursal
        </th>
        <th></th>
    </tr>
    @{var i = 0;}
    @foreach (var item in Model.OrderVm)
    {
        i++;
        <tr>
            <td>
                @i
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Monto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Moneda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TxtEstado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TxtMoneda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TxtSucursal)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
    }

</table>
